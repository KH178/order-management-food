{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist-workers",
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["workers/**/*.ts", "domain/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "app"]
}
