{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "Cost-optimized event-driven OMS with Kafka, CQRS, and Saga orchestration",
  "scripts": {
    "dev": "next dev -p 4100",
    "build": "prisma generate && prisma db push && next build",
    "start": "next start -p 4100",
    "start:workers": "npm run worker:all",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "worker:all": "ts-node --project tsconfig.workers.json workers/all.ts",
    "worker:outbox": "ts-node --project tsconfig.workers.json workers/outbox-processor.ts",
    "worker:projection": "ts-node --project tsconfig.workers.json workers/projection-consumer.ts",
    "worker:saga": "ts-node --project tsconfig.workers.json workers/saga-consumer.ts",
    "infra:up": "docker-compose up -d",
    "infra:down": "docker-compose down",
    "infra:logs": "docker-compose logs -f"
  },
  "keywords": [
    "kafka",
    "cqrs",
    "event-sourcing",
    "saga",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "6.19.2",
    "kafkajs": "^2.2.4",
    "next": "^16.1.6",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "prisma": "6.19.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
